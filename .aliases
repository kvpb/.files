# 	sudo,	sudoedit	— execute a command as another user

alias	sudo="sudo "

# 		ls		- list directory contents

alias	la='ls -ap' # List directory contents including directory entries whose names begin with a dot ('.'). [Note : The -p option might be useless since I wrote another alias for ls to extend its behavior the way I want it that includes the option — still, if the other alias is disabled, it wouldn't work anymore.]

# alias lh='ls -a | grep '\''^\.'\' # List directory hidden files only.

alias lh='ls -d .*' # List directory hidden files only.

alias ls='pwd; ls -lp' # Print working directory then list directory contents in long format writing a slash (`/') after each filename if that file is a directory.

# 		cd		- change the working directory

alias	..='cd ../' # Change the working dir to current user's parent one.

alias	...='cd ../../' # Change the working dir to current's grand-parent one.

alias	....='cd ../../../' # Change the working dir to current's grand-grand-parent one.

#alias	rt='cd /' # Change the working dir to root's.

alias	.f='cd ~/.files/' # Change the working dir to cur user's dotfiles'.

alias	de='cd ~/Desktop/' # Change the working dir to cur user's desktop'.

alias	dc='cd ~/Documents/' # Change the working dir to cur user's documents'.

alias	dl='cd ~/Downloads/' # Change the working dir to cur user's downloads'.

alias	db='cd ~/Dropbox/' # Change the working directory to current user's Dropbox's.

alias	jh='cd ~/jhs/' # Change the working dir to my personal one.

alias	li='cd ~/Library/' # Change the working directory to current user's library's.

alias	mi='cd ~/Miscellaneous/' # Change the working dir to current user's misc files'.

alias	mo='cd ~/Movies/' # Change the working dir to current user's movies'.

alias	mu='cd ~/Music/' # Change the working dir to current user's music's.

alias	op='cd ~/OPs/' # Change the working dir to my personal operations'.

alias	pi='cd ~/Pictures/' # Change the working dir to current user's pictures'.

alias	tr='cd ~/.Trash/' # Change the working dir to current user's trash's.

# 		git		- the stupid content tracker

# alias	git='/usr/local/git/bin/git' # Get fucked, Apple. (i) Requires Git for Mac OS X from the official Git website (http://git-scm.com/).

alias	ga='git add '

alias	gc='git commit -m '

alias	gcem="git commit -a --allow-empty-message -m ''"

alias	gr='git rm '

alias	gs='git status '

#alias	gp='git pull '

alias	gp='git push '

alias	gpo='git push origin '

#		tar		- manipulate tape archives

alias	tgz='tar -czvf '

# 		revoltxs'	- user-specific aliases

alias	emptrash='cd ~/.Trash/ ; rm -rf {,.}*'

