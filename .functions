#!/usr/bin/env bash

mf ()
{
	for var in "$@";
	do
		if [ -e "${var}" ];
		then
			printf "${var}: file exists\n";
		else
			> "${var}";
			printf '\n' >> ${var};
		fi;
	done;
} # mf, mkfl, mkfil
# mf	make files
# touch tempers with the timestamps. mkfile does not create empty files. Sometimes, that's all you need.

